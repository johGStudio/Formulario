<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.formulario.MainActivity"
    android:background="#b86088">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombretxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="15dp"
        android:background="#d8ffffff"
        android:hint="Nombre"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:editable="false"
        android:padding="6dp"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/apellidotxt"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:autoText="false"
        android:hint="Apellido"
        android:allowUndo="false"
        android:background="#d8ffffff"
        android:padding="6dp"
        android:layout_below="@+id/nombretxt"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/nombretxt"
        android:layout_alignStart="@+id/nombretxt"
        android:layout_alignRight="@+id/nombretxt"
        android:layout_alignEnd="@+id/nombretxt" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailtxt"
        android:layout_below="@+id/apellidotxt"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:hint="Email"
        android:padding="6dp"
        android:background="#d8ffffff"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/apellidotxt"
        android:layout_alignStart="@+id/apellidotxt"
        android:layout_alignRight="@+id/apellidotxt"
        android:layout_alignEnd="@+id/apellidotxt" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passtxt"
        android:layout_below="@+id/emailtxt"
        android:layout_marginTop="10dp"
        android:background="#d8ffffff"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:padding="6dp"
        android:layout_alignLeft="@+id/emailtxt"
        android:layout_alignStart="@+id/emailtxt"
        android:layout_alignRight="@+id/emailtxt"
        android:layout_alignEnd="@+id/emailtxt" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/repasstxt"
        android:layout_marginTop="10dp"
        android:background="#d8ffffff"
        android:layout_below="@+id/passtxt"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:textSize="15dp"
        android:padding="6dp"
        android:layout_alignLeft="@+id/passtxt"
        android:layout_alignStart="@+id/passtxt"
        android:layout_alignRight="@+id/passtxt"
        android:layout_alignEnd="@+id/passtxt" />

    <CheckBox
        android:id="@+id/aceptar_condi"
        android:text="Aceptar Condiciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:onClick="mostrarAviso"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/registrarse"
        android:layout_alignStart="@+id/registrarse" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRARSE"
        android:id="@+id/registrarse"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/aceptar_condi"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:background="#fffefe"
        android:onClick="registrar" />

</RelativeLayout>
